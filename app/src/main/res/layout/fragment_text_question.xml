<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.TextQuestionFragment"
        android:layout_gravity="center"
        android:id="@+id/fragment_text_question">

    <TextView
            tools:text="Question Number"
            android:text="@string/tv_question_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_question_number"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/end_margin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/start_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="@string/tv_question_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_question_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/end_margin"
            app:layout_constraintTop_toBottomOf="@+id/tv_question_number"
            android:layout_marginTop="32dp"
            app:layout_constraintVertical_bias="0.5"
            />

    <EditText
            android:hint="@string/input_your_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/et_answer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="276dp"
            android:layout_marginStart="16dp"/>

    <Button
            android:text="@string/b_sfq_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_Ok"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/et_answer"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="276dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.553"/>


</android.support.constraint.ConstraintLayout>