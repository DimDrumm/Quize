<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.SingleSelectionFragment"
        android:id="@+id/frameLayout">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            />

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintBottom_toTopOf="@id/btn_next">
        <RadioButton
                tools:text="Variant 1"
                android:id="@+id/radio_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"/>
        <RadioButton
                tools:text="Variant 2"
                android:id="@+id/radio_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"/>
        <RadioButton
                tools:text="Variant 3"
                android:id="@+id/radio_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="32dp"/>
        <RadioButton
                tools:text="Variant 4"
                android:id="@+id/radio_btn_4"
                android:layout_width="wrap_content"
                android:layout_height="32dp"/>
    </RadioGroup>

    <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:text="@string/next"
            />

</android.support.constraint.ConstraintLayout>