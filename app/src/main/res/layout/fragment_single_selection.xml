<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.SingleSelectionFragment"
        android:id="@+id/fr_single_question_selection">


    <TextView
            tools:text="Question Number"
            android:text="@string/tv_question_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_question_number"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/end_margin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/start_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="@string/tv_question_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/tv_question_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/end_margin"
            app:layout_constraintTop_toBottomOf="@+id/tv_question_number"
            android:layout_marginTop="32dp"
            app:layout_constraintVertical_bias="0.5"
            />

    <TextView
            android:text="@string/Answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_answer"
            android:layout_marginTop="32dp"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_question_text"/>

    <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
    </RadioGroup>


</android.support.constraint.ConstraintLayout>